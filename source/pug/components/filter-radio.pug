mixin filter-radio(classNames)
    ul.filter-radio(class= classNames)
        li.filter-radio_item
            input(type="radio", name="color-button" class="filter-radio_button" id="#B0C3C7" value="#B0C3C7" checked)
            label(for="#B0C3C7" style="--radio-color: #B0C3C7")
        li.filter-radio_item
            input(type="radio", name="color-button" class="filter-radio_button" id="#3B6392" value="#3B6392")
            label(for="#3B6392" style="--radio-color: #3B6392")
        li.filter-radio_item
            input(type="radio", name="color-button" class="filter-radio_button" id="#2D2E2E" value="#2D2E2E")
            label(for="#2D2E2E" style="--radio-color: #2D2E2E")
        li.filter-radio_item
            input(type="radio", name="color-button" class="filter-radio_button" id="#ECECEC" value="#ECECEC")
            label(for="#ECECEC" style="--radio-color: #ECECEC")
        li.filter-radio_item
            input(type="radio", name="color-button" class="filter-radio_button" id="#4193DA" value="#4193DA")
            label(for="#4193DA" style="--radio-color: #4193DA")
